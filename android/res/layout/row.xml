<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="horizontal"
              a:layout_width="fill_parent"
              a:layout_height="wrap_content">

    <TextView
            a:id="@+id/number"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="5"
            a:gravity="right"
            a:textSize="12dp"/>

    <View
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="5"/>

    <TextView
            a:id="@+id/white"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="15"
            a:textSize="12dp"/>

    <TextView
            a:id="@+id/black"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="15"
            a:textSize="12dp"/>

    <TextView
            a:id="@+id/comment"
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="60"
            a:textSize="12dp"/>

</LinearLayout>